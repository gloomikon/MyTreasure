unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm1 = class(TForm)
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    procedure FormActivate(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

//uses Unit1;

{$R *.dfm}

procedure TForm1.FormActivate(Sender: TObject);
var i:integer;
 begin
 form1.Refresh;

 {–»—Œ¬¿Õ»≈}
 form1.Canvas.pen.Color:=clblack;
 form1.Canvas.Pen.Width:=5;
 form1.Canvas.moveto(640,0);
 form1.Canvas.lineto(640,1024);
 form1.Canvas.MoveTo(0,512);
 form1.Canvas.LineTo(1280,512);
  form1.Canvas.Pen.Width:=2;
 for i:=641 to 1280 do
  if (i-640) mod 15=0 then
   begin
   form1.Canvas.moveto(i,0);
   form1.Canvas.lineto(i,1024);
   end;
   for i:=0 to 639 do
  if (640-i) mod 15=0 then
   begin
   form1.Canvas.moveto(i,0);
   form1.Canvas.lineto(i,1024);
   end;
   for i:=513 to 1024 do
  if (i-512) mod 15=0 then
   begin
   form1.Canvas.moveto(0,i);
   form1.Canvas.lineto(1280,i);
   end;
    for i:=0 to 511 do
  if (512-i) mod 15=0 then
   begin
   form1.Canvas.moveto(0,i);
   form1.Canvas.lineto(1280,i);
   end;
  { ŒÕ≈÷ –»—Œ¬¿Õ»ﬂ}

 end;
procedure TForm1.Button1Click(Sender: TObject);
var i,j:integer;
f:boolean;
begin
{–»—Œ¬¿Õ»≈}
 form1.Canvas.pen.Color:=clblack;
 form1.Canvas.Pen.Width:=5;
 form1.Canvas.moveto(640,0);
 form1.Canvas.lineto(640,1024);
 form1.Canvas.MoveTo(0,512);
 form1.Canvas.LineTo(1280,512);
  form1.Canvas.Pen.Width:=2;
 for i:=641 to 1280 do
  if (i-640) mod 15=0 then
   begin
   form1.Canvas.moveto(i,0);
   form1.Canvas.lineto(i,1024);
   end;
   for i:=0 to 639 do
  if (640-i) mod 15=0 then
   begin
   form1.Canvas.moveto(i,0);
   form1.Canvas.lineto(i,1024);
   end;
   for i:=513 to 1024 do
  if (i-512) mod 15=0 then
   begin
   form1.Canvas.moveto(0,i);
   form1.Canvas.lineto(1280,i);
   end;
    for i:=0 to 511 do
  if (512-i) mod 15=0 then
   begin
   form1.Canvas.moveto(0,i);
   form1.Canvas.lineto(1280,i);
   end;
  { ŒÕ≈÷ –»—Œ¬¿Õ»ﬂ}
f:=false;
form1.Canvas.pen.width:=3;
form1.Canvas.pen.color:=clred;
for i:=0 to 1280 do
for j:=0 to 1024 do
 begin
 if (i-640)/15=(512-j)/15 then if f=false then begin f:=true; form1.Canvas.moveto(i,j); end else form1.Canvas.lineto(i,j);
 end;
end;

procedure TForm1.Button2Click(Sender: TObject);
var i,j:integer;
f:boolean;
begin
{–»—Œ¬¿Õ»≈}
 form1.Canvas.pen.Color:=clblack;
 form1.Canvas.Pen.Width:=5;
 form1.Canvas.moveto(640,0);
 form1.Canvas.lineto(640,1024);
 form1.Canvas.MoveTo(0,512);
 form1.Canvas.LineTo(1280,512);
  form1.Canvas.Pen.Width:=2;
 for i:=641 to 1280 do
  if (i-640) mod 15=0 then
   begin
   form1.Canvas.moveto(i,0);
   form1.Canvas.lineto(i,1024);
   end;
   for i:=0 to 639 do
  if (640-i) mod 15=0 then
   begin
   form1.Canvas.moveto(i,0);
   form1.Canvas.lineto(i,1024);
   end;
   for i:=513 to 1024 do
  if (i-512) mod 15=0 then
   begin
   form1.Canvas.moveto(0,i);
   form1.Canvas.lineto(1280,i);
   end;
    for i:=0 to 511 do
  if (512-i) mod 15=0 then
   begin
   form1.Canvas.moveto(0,i);
   form1.Canvas.lineto(1280,i);
   end;
  { ŒÕ≈÷ –»—Œ¬¿Õ»ﬂ}
  f:=false;
form1.Canvas.pen.width:=3;
form1.Canvas.pen.color:=clred;
for i:=0 to 1280 do
for j:=0 to 1024 do
 begin
 if (i-640)*(i-640)/15=(512-j) then if f=false then begin f:=true; form1.Canvas.moveto(i,j); end else form1.Canvas.lineto(i,j);
 end;
end;

procedure TForm1.Button3Click(Sender: TObject);
var i,j:integer;
f:boolean;
begin
{–»—Œ¬¿Õ»≈}
 form1.Canvas.pen.Color:=clblack;
 form1.Canvas.Pen.Width:=5;
 form1.Canvas.moveto(640,0);
 form1.Canvas.lineto(640,1024);
 form1.Canvas.MoveTo(0,512);
 form1.Canvas.LineTo(1280,512);
  form1.Canvas.Pen.Width:=2;
 for i:=641 to 1280 do
  if (i-640) mod 15=0 then
   begin
   form1.Canvas.moveto(i,0);
   form1.Canvas.lineto(i,1024);
   end;
   for i:=0 to 639 do
  if (640-i) mod 15=0 then
   begin
   form1.Canvas.moveto(i,0);
   form1.Canvas.lineto(i,1024);
   end;
   for i:=513 to 1024 do
  if (i-512) mod 15=0 then
   begin
   form1.Canvas.moveto(0,i);
   form1.Canvas.lineto(1280,i);
   end;
    for i:=0 to 511 do
  if (512-i) mod 15=0 then
   begin
   form1.Canvas.moveto(0,i);
   form1.Canvas.lineto(1280,i);
   end;
  { ŒÕ≈÷ –»—Œ¬¿Õ»ﬂ}
  f:=false;
form1.Canvas.pen.width:=3;
form1.Canvas.pen.color:=clred;
for i:=0 to 639 do
for j:=0 to 1024 do
 begin
 if 1/(i-640)*15=(512-j)/15 then if f=false then begin f:=true; form1.Canvas.moveto(i,j); end else form1.Canvas.lineto(i,j);
 end;
 f:=false;
 for i:=641 to 1280 do
for j:=0 to 1024 do
 begin
 if 1/(i-640)*15=(512-j)/15 then if f=false then begin f:=true; form1.Canvas.moveto(i,j); end else form1.Canvas.lineto(i,j);
 end;
end;

end.
